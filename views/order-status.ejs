<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Status - HStockHub</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-dark fixed-top shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
      <a class="navbar-brand fw-bold text-white" href="/">
        <i class="fas fa-store fa-lg me-2"></i>
        HStockHub
      </a>
      <div class="text-white">
        <span class="me-3"><i class="fas fa-shopping-cart me-1"></i>Order Status</span>
      </div>
    </div>
  </nav>

  <!-- Order Status Section -->
  <section class="order-status-section py-5 mt-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card shadow-lg">
            <div class="card-body p-5">
              <div class="text-center mb-4">
                <i class="fas fa-receipt fa-4x text-primary mb-3"></i>
                <h2>Order Status</h2>
                <h5 class="text-muted">Order #<%= order.order_id %></h5>
              </div>

              <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" role="alert">
                  <i class="fas fa-exclamation-triangle me-2"></i>
                  <%= error %>
                </div>
              <% } %>

              <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success" role="alert">
                  <i class="fas fa-check-circle me-2"></i>
                  <%= success %>
                </div>
              <% } %>

              <!-- Order Information -->
              <div class="row mb-4">
                <div class="col-md-6">
                  <div class="card border-info">
                    <div class="card-header bg-info text-white">
                      <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Order Details
                      </h6>
                    </div>
                    <div class="card-body">
                      <p><strong>Product:</strong> <%= order.shipping_address?.delivery_method ? 'Social Media Account' : 'Premium Account' %></p>
                      <p><strong>Order Date:</strong> <%= new Date(order.created_at).toLocaleDateString() %></p>
                      <p><strong>Total Amount:</strong> $<%= order.total_amount %></p>
                      <p><strong>Payment Method:</strong> <%= order.billing_address?.payment_method || 'Crypto' %></p>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="card border-success">
                    <div class="card-header bg-success text-white">
                      <h6 class="card-title mb-0">
                        <i class="fas fa-shipping-fast me-2"></i>Delivery Information
                      </h6>
                    </div>
                    <div class="card-body">
                      <p><strong>Telegram:</strong> <%= order.shipping_address?.telegram_id || 'Not provided' %></p>
                      <p><strong>Email:</strong> <%= order.guest_email || 'Not provided' %></p>
                      <p><strong>Transaction ID:</strong> <%= order.payment_id || 'Pending' %></p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Order Status -->
              <div class="text-center mb-4">
                <% if (order.status === 'delivered') { %>
                  <div class="alert alert-success">
                    <i class="fas fa-check-circle fa-2x text-success mb-3"></i>
                    <h4 class="alert-heading">Order Delivered!</h4>
                    <p class="mb-0">Your account details have been sent to your Telegram and email.</p>
                    <small class="text-muted">Please check your messages for login credentials.</small>
                  </div>
                <% } else if (order.status === 'pending') { %>
                  <div class="alert alert-warning">
                    <i class="fas fa-clock fa-2x text-warning mb-3"></i>
                    <h4 class="alert-heading">Order Processing</h4>
                    <p class="mb-0">Your payment is being verified. This usually takes 10-30 minutes.</p>
                    <small class="text-muted">You'll receive delivery details via Telegram and email once approved.</small>
                  </div>
                <% } else { %>
                  <div class="alert alert-info">
                    <i class="fas fa-cog fa-2x text-info mb-3"></i>
                    <h4 class="alert-heading">Order <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %></h4>
                    <p class="mb-0">Your order is being prepared for delivery.</p>
                  </div>
                <% } %>
              </div>

              <!-- Check Status Button -->
              <div class="text-center mb-4">
                <button type="button" class="btn btn-primary btn-lg" onclick="refreshStatus()">
                  <i class="fas fa-sync-alt me-2"></i>Check Status
                </button>
                <p class="mt-2 text-muted">
                  <small>Click to refresh the latest status of your order</small>
                </p>
              </div>

              <!-- Download Button for Delivered Orders -->
              <% if (order.status === 'delivered') { %>
                <div class="text-center mb-4">
                  <a href="/order/<%= order.order_id %>/download" class="btn btn-success btn-lg">
                    <i class="fas fa-download me-2"></i>Download Product
                  </a>
                  <p class="mt-2 text-muted">
                    <small>Download your product details and account information</small>
                  </p>
                </div>
              <% } %>

              <!-- Warning Message -->
              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Important:</strong> Orders are processed within 24-48 hours of payment confirmation.
                Delivery is guaranteed once admin verification is complete.
              </div>

              <!-- Support Section -->
              <div class="text-center">
                <h6>Need Help?</h6>
                <div class="mt-3">
                  <a href="/support" class="btn btn-outline-primary me-2">
                    <i class="fas fa-headset me-1"></i>Contact Support
                  </a>
                  <a href="/" class="btn btn-outline-secondary">
                    <i class="fas fa-home me-1"></i>Back to Store
                  </a>
                  <form action="/logout" method="POST" class="d-inline ms-2">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                      <i class="fas fa-sign-out-alt me-1"></i>Logout
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer bg-dark text-white py-5 mt-5">
    <div class="container text-center">
      <p>&copy; 2025 HStockHub. Secure social media account marketplace.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function refreshStatus() {
      // Add loading animation
      const button = event.target.closest('button');
      const originalText = button.innerHTML;
      button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Refreshing...';
      button.disabled = true;

      // Reload the page to get latest status
      setTimeout(() => {
        window.location.reload();
      }, 1000);
    }

    // Auto-refresh status every 30 seconds
    setInterval(() => {
      if (document.visibilityState === 'visible') {
        // Only auto-refresh if page is visible to user
        refreshStatus();
      }
    }, 30000);

    // Show last updated time
    document.addEventListener('DOMContentLoaded', function() {
      const now = new Date();
      console.log('Order status last checked:', now.toLocaleString());
    });
  </script>
</body>
</html>
